[alias]
	st = status -sb
    watch-st = !watch --color git -c color.status=always st
	today = log --since=midnight --author='Kosuke Kusano' --oneline
	c = commit
    ll = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
